 {
  "schemaVersion" :1 ,
  "dockerfileLines" :[
                        "FROM node:8.7.0-alpine",
                        "RUN mkdir -p /usr/src/app",
                        "WORKDIR /usr/src/app",
                        "COPY ./src/package.json /usr/src/app/",
                        "RUN npm install && npm cache clean --force",
                        "RUN npm build   ## THIS IS THE COMMAND THAT BUILDS FRONTEND CODE, IT MIGHT BE DIFFERENT DEPENDING YOUR PACKAGE.JSON",
                        "COPY ./src /usr/src/app",
                        "RUN cp /usr/src/app/dist /usr/src/app/public/  ## DIRECTORIES MAY CHANGE DEPENDING ON YOUR PACKAGE.JSON CONFIG",
                        "ENV NODE_ENV production",
                        "ENV PORT 80",
                        "EXPOSE 80",
                        "CMD [ \"npm\", \"start\" ]"
                    ]
 }